<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    tools:context="Activity.Splash_Screen">

    <!-- Background Elements (Reduced Size) -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_green_light"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <View
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/circle_green_dark"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/splash_screen_pic1"
        app:layout_constraintEnd_toEndOf="@+id/splash_screen_pic1"
        app:layout_constraintStart_toStartOf="@+id/splash_screen_pic1"
        app:layout_constraintTop_toTopOf="@+id/splash_screen_pic1"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- App Logo and Name (Adjusted Positioning) -->
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cafe_logo"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/splash_screen_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:shadowColor="#1B5E20"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="MARATHON CAFÃ‰"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Product Image (Reduced Size) -->
    <ImageView
        android:id="@+id/splash_screen_pic1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cafe_logo"
        android:elevation="12dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintWidth_percent="0.6"
        android:contentDescription="Premium coffee"/>

    <!-- Taglines Container (Adjusted Text Sizes) -->
    <LinearLayout
        android:id="@+id/tagline_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen_pic1"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/slogan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PREMIUM COFFEE EXPERIENCE"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.05"
            android:shadowColor="#1B5E20"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView
            android:id="@+id/slogan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Delivered to your doorstep"
            android:textColor="#E8F5E9"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.03"
            android:shadowColor="#1B5E20"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </LinearLayout>

    <!-- Delivery Section (Reduced Size) -->
    <LinearLayout
        android:id="@+id/delivery_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_rounded_rect"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagline_container"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.75">

        <ImageView
            android:id="@+id/splash_screen_pic2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delivery_boy"
            android:tint="@color/white"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAST and FREE DELIVERY"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <!-- Decorative Bottom Element -->
    <View
        android:id="@+id/bottom_accent"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/green_gradient_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>