<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Order Name -->
        <TextView
            android:id="@+id/orderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/orderPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cappuccino" />

        <!-- Order Price (per item) -->
        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#757575"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/orderName"
            tools:text="399 ETB" />

        <!-- Quantity Selector -->
        <LinearLayout
            android:id="@+id/quantityContainer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_quantity_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderName">

            <!-- Decrease Button -->
            <ImageView
                android:id="@+id/btnDecrease"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_remove"
                android:contentDescription="Decrease"
                android:padding="8dp"
                android:tint="#2196F3"/>

            <!-- Quantity Display -->
            <TextView
                android:id="@+id/orderQuantity"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="2" />

            <!-- Increase Button -->
            <ImageView
                android:id="@+id/btnIncrease"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add"
                android:contentDescription="Increase"
                android:padding="8dp"
                android:tint="#2196F3"/>
        </LinearLayout>

        <!-- Total Price -->
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderPrice"
            tools:text="798 ETB" />

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantityContainer">

            <!-- Delete Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteOrder"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="#F44336"
                android:textSize="16sp"

                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="8dp"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp" />

            <!-- Place Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlaceOrder"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Checkout"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:icon="@drawable/shopping_cart"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="#2196F3"
                app:cornerRadius="8dp"
                app:rippleColor="#1976D2" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>